{
  "manifest_version": 3,
  "name": "Cancel X",
  "version": "0.1.4",
  "description": "Redirect x.com links to xcancel.com",
  "permissions": ["storage"],
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Cancel X Options",
    "default_popup": "pages/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "cancel-x@personal.org"
    }
  }
}
